<div class="content">
    <h3>
        <%= data.title %>
    </h3>
    <form class="form" id="<%= data.content%>" action="/update-permission" method="post">
        <div class="spacer"></div>
        <div class="form-group">
            <label for="username">Username</label>
            <a class="secondary-bg-color d-flex justify-content-center">
                <%= data.user.username%>
            </a>
        </div>
        <div class="form-group">
            <label for="permission">Role:</label>
            <input type="hidden" name="permissionID" value="<%= data.permission.id%>">
            <input type="hidden" name="userID" value="<%= data.user.id%>">
            <select id="permission" name="roleID">
                <% for (const role of data.roles) {%>
                    <% if (role.id===data.permission.roleID) {%>
                        <option selected value="<%= role.id%>">
                            <%= role.role%>
                                <% } else {%>
                        <option value="<%= role.id%>">
                            <%= role.role%>
                                <% } %>
                                    <% } %>
            </select>
            <span class="form-message"></span>
        </div>
        <input type="button" class="btn btn-primary" value="Update">
</div>